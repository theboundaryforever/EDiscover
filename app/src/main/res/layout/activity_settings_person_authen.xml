<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color">
    <include
        layout="@layout/activity_settings_title_authen"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/bt_margin_10"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_50"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:layout_marginLeft="@dimen/bt_margin_15"
            android:textSize="@dimen/font15"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/et_real_name"
            android:layout_toRightOf="@+id/tv_real"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/bt_margin_15"
            android:textSize="@dimen/font14"
            android:layout_centerVertical="true"
            android:hint="请输入真实姓名" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bt_margin_1"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_real"
            android:background="@color/line_color"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_50"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号码"
            android:layout_marginLeft="@dimen/bt_margin_15"
            android:textSize="@dimen/font15"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/et_card"
            android:layout_toRightOf="@+id/tv_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/bt_margin_15"
            android:textSize="@dimen/font14"
            android:hint="请输入身份证号码" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bt_margin_1"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_card"
            android:background="@color/line_color" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_50"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_marginLeft="@dimen/bt_margin_15"
            android:textSize="@dimen/font15"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/et_tel"
            android:layout_toRightOf="@+id/tv_tel"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/bt_margin_15"
            android:textSize="@dimen/font14"
            android:hint="请输入手机号码" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_60">
        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="@dimen/bt_margin_100"
            android:layout_height="@dimen/bt_margin_30"
            android:text="发送验证码"
            android:textColor="@color/white"
             android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@mipmap/bt_bg2"
            android:textSize="@dimen/font14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_50"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:layout_marginLeft="@dimen/bt_margin_15"
            android:textSize="@dimen/font15"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/et_code"
            android:layout_toRightOf="@+id/tv_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/bt_margin_15"
            android:textSize="@dimen/font14"
            android:hint="请输入收到的验证码" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="上传证件照"
        android:textSize="@dimen/font15"
     android:padding="@dimen/bt_margin_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/bt_margin_30"
        android:background="@color/white">

            <ImageView
                android:id="@+id/iv_card_positive"
                android:layout_width="@dimen/bt_margin_120"
                android:layout_height="@dimen/bt_margin_120"
                  android:layout_marginLeft="@dimen/bt_margini_20"
                 android:src="@mipmap/idcard" />


        <ImageView
            android:id="@+id/iv_card_negative"
            android:layout_width="@dimen/bt_margin_120"
            android:layout_height="@dimen/bt_margin_120"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"

            android:layout_marginRight="@dimen/bt_margini_20"
            android:src="@mipmap/idcard2" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_40"/>
    <RelativeLayout
        android:id="@+id/ll_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_40"
        android:background="@mipmap/button"
        android:layout_marginLeft="@dimen/bt_margin_40"
        android:layout_marginRight="@dimen/bt_margin_40"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确定"
            android:textSize="@dimen/font15"
            android:textColor="@color/white" />

    </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>