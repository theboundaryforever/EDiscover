<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    >
    <include
        layout="@layout/activity_settings_title_bank"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_10"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/bt_margin_50"
      android:background="@color/white"
      >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="通过银行卡信息验证身份"
          android:textSize="@dimen/font13"
          android:gravity="center"
          />

  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_25"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_50"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bt_margin_15"
            android:gravity="center_vertical"

            android:text="银行卡号"
            android:textSize="@dimen/font15"
            />
        <EditText
            android:id="@+id/et_card_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="银行卡号"
            android:textSize="@dimen/font14"
            android:background="@null"
            android:layout_toRightOf="@+id/tv_card"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_ok"
        android:layout_width="@dimen/bt_margin_295"
        android:layout_height="@dimen/bt_margin_40"
        android:background="@mipmap/bt_bg2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bt_margin_30"
        android:layout_marginLeft="@dimen/bt_margin_33"
        android:layout_marginRight="@dimen/bt_margin_33">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="下一步"
            android:textSize="@dimen/font15"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>