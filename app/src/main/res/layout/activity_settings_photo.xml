<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qr_bg_color">
    <LinearLayout
        android:layout_above="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/alert_bt_bg"
        android:layout_marginLeft="@dimen/bt_margin_10"
        android:layout_marginRight="@dimen/bt_margin_10"

        >
        <TextView
            android:id="@+id/tv_take_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="拍照"
            android:textSize="@dimen/font14"
            android:paddingTop="@dimen/bt_margin_15"
            android:paddingBottom="@dimen/bt_margin_15"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/bt_margin_1"
            android:background="@color/line_color"
            />

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="从手机相册中选择"
            android:textSize="@dimen/font14"
            android:paddingTop="@dimen/bt_margin_15"
            android:paddingBottom="@dimen/bt_margin_15"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_15"
        android:background="#00000000"
        android:layout_above="@+id/ll_cancel"

        />
        <LinearLayout
            android:id="@+id/ll_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_bt_bg"
            android:layout_marginLeft="@dimen/bt_margin_10"
            android:layout_marginRight="@dimen/bt_margin_10"
            android:layout_marginBottom="@dimen/bt_margini_20"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="@dimen/font15"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="@dimen/bt_margin_15"
                />
        </LinearLayout>
</RelativeLayout>