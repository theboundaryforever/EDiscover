<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/qr_bg_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_206"
        android:layout_alignParentBottom="true"
        android:background="#ededed"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择交易类型"
            android:textSize="@dimen/font17"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/bt_margin_12" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <TextView
               android:id="@+id/tv_all"
               android:layout_width="@dimen/bt_margin_93"
               android:layout_height="@dimen/bt_margin_55"
               android:background="@color/white"
               android:gravity="center"
               android:layout_margin="@dimen/bt_margin_10"
               android:text="全部" />
           <TextView
               android:id="@+id/tv_red_envelopes"
               android:layout_width="@dimen/bt_margin_93"
               android:layout_height="@dimen/bt_margin_55"
               android:background="@color/white"
               android:gravity="center"
               android:layout_margin="@dimen/bt_margin_10"
               android:text="红包" />
           <TextView
               android:id="@+id/tv_transfer"
               android:layout_width="@dimen/bt_margin_93"
               android:layout_height="@dimen/bt_margin_55"
               android:background="@color/white"
               android:gravity="center"
               android:layout_margin="@dimen/bt_margin_10"
               android:text="转账" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_withdrawals"
                android:layout_width="@dimen/bt_margin_93"
                android:layout_height="@dimen/bt_margin_55"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/bt_margin_10"
                android:layout_marginRight="@dimen/bt_margin_10"
                android:text="充值提现" />
            <TextView
                android:id="@+id/tv_qr_pay"
                android:layout_width="@dimen/bt_margin_93"
                android:layout_height="@dimen/bt_margin_55"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/bt_margin_10"
                android:layout_marginRight="@dimen/bt_margin_10"
                android:text="二维码收付款" />
            <TextView
                android:id="@+id/tv_refund"
                android:layout_width="@dimen/bt_margin_93"
                android:layout_height="@dimen/bt_margin_55"
                android:layout_marginLeft="@dimen/bt_margin_10"
                android:layout_marginRight="@dimen/bt_margin_10"
                android:background="@color/white"
                android:gravity="center"
                android:text="退款" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>