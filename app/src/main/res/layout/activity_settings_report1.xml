<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    >
<include
    layout="@layout/activity_settings_title_report"
    />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_tel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_44"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本人手机"
                    android:textSize="@dimen/font15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15" />
                <EditText
                    android:id="@+id/et_tel"
                    android:layout_toRightOf="@+id/tv_tel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/bt_margin_15"
                    android:hint="输入手机号"
                    android:textSize="@dimen/font14"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_44"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="受骗账号"
                    android:textSize="@dimen/font15"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:layout_centerVertical="true" />
                <EditText
                    android:id="@+id/et_account"
                    android:layout_toRightOf="@+id/tv_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/bt_margin_15"
                    android:hint="输入受骗账号"
                    android:textSize="@dimen/font14"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_report_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_44"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_obj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="举报对象"
                    android:textSize="@dimen/font15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15"/>
                <EditText
                    android:id="@+id/et_obj"
                    android:layout_toRightOf="@+id/tv_obj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/bt_margin_15"
                    android:hint="输入举报账号"
                    android:textSize="@dimen/font14"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_illegal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="违规行为"
                    android:textSize="@dimen/font15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/set_go"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/bt_margin_15"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_describe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="举报描述"
                    android:textSize="@dimen/font15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/set_go"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/bt_margin_15" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/bt_margin_10"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聊天/支付记录等诈骗经过的证据截图"
                    android:textSize="@dimen/font15"
                    android:layout_marginLeft="@dimen/bt_margin_15" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/bt_margin_15"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/bt_margin_10"
                    android:src="@mipmap/add_img"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_ok"
                android:layout_width="@dimen/bt_margin_295"
                android:layout_height="@dimen/bt_margin_40"
                android:background="@mipmap/yuanjiao"
                android:layout_marginLeft="@dimen/bt_margini_20"
                android:layout_marginRight="@dimen/bt_margini_20"
                android:layout_marginTop="@dimen/bt_margin_30"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="提交"
                    android:textSize="@dimen/font16"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>