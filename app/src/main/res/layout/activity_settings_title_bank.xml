<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bt_margin_49"
    android:background="@color/black_deep">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_back"
            android:padding="@dimen/bt_margin_15"
            android:layout_alignParentBottom="true" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加银行卡"
            android:textSize="@dimen/font17"
            android:textColor="@color/bank_title_color"
            android:layout_centerInParent="true" />
    </RelativeLayout>