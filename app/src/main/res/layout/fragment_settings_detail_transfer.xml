                    android:id="@+id/tv_reback_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-04-03 10:36:10"
                    android:textColor="@color/default_text_color"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bt_margin_15" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_49"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款方式"
                    android:textSize="@dimen/font14"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/default_bg_color" />
                <TextView
                    android:id="@+id/tv_reback_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:textColor="@color/default_text_color"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bt_margin_15" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_reaback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_49"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款单号"
                    android:textSize="@dimen/font14"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:layout_centerVertical="true"
                    android:textColor="@color/default_bg_color" />
