            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/default_bg_color"
            android:layout_marginRight="@dimen/bt_margin_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_40"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textSize="@dimen/font12"
            android:layout_marginLeft="@dimen/bt_margin_15"
            android:layout_centerVertical="true"
            android:textColor="@color/default_bg_color" />

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/default_bg_color"
            android:layout_marginRight="@dimen/bt_margin_15" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_40"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账单账号"
            android:textSize="@dimen/font12"
            android:layout_marginLeft="@dimen/bt_margin_15"
            android:layout_centerVertical="true"
            android:textColor="@color/default_bg_color" />

        <TextView
            android:id="@+id/tv_account_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="789123654789125478963"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/default_bg_color"
            android:layout_marginRight="@dimen/bt_margin_15" />
    </RelativeLayout>
