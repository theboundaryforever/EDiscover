<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--验证码-->
    <include
        layout="@layout/activity_settings_title_pay"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/x45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x8"
            android:text="我们已发送"
            android:textColor="@color/default_text_color"/>
        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="@dimen/x8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到你的手机"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/x8"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="135******78"
        android:layout_marginTop="@dimen/x6"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="@dimen/x9"
        />
    <EditText
        android:id="@+id/et_vertify_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x21"
        android:background="@null"
        android:hint="请输入验证码"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:textSize="@dimen/x10"
        android:layout_marginTop="@dimen/x16"
        />
    <LinearLayout
        android:id="@+id/ll_getcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x11"
        android:paddingLeft="@dimen/x9"
        android:paddingRight="@dimen/x9"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/x9"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收不到验证码？"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重发短信"
            android:textColor="#ecd6aa"
            />
    </LinearLayout>

</LinearLayout>