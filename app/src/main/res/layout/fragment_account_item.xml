<?xml version="1.0" encoding="utf-8"?>
<com.kest.ediscover.widget.swipe.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bt_margin_80">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/bt_margin_32"
                android:layout_height="@dimen/bt_margin_32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bt_margin_15"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_img"
                android:text="转账转给小明"
                android:textSize="@dimen/font13"
                android:layout_marginTop="@dimen/bt_margini_22"
                android:layout_marginLeft="@dimen/bt_margin_10" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.04.03"
                android:layout_alignLeft="@+id/tv_name"
                android:textSize="@dimen/font13"
                android:textColor="@color/default_text_color"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/bt_margin_1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/bt_margin_15"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font15"
                    android:textColor="@color/qr_bg_color"
                    android:layout_gravity="right"
                    android:text="-1800.00" />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友已退回"
                    android:textSize="@dimen/font15"
                    android:textColor="@color/text_color4" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_1"
                android:background="@color/line_color"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_name"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/text_color4"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/font16" />
    </LinearLayout>
</com.kest.ediscover.widget.swipe.SwipeMenuLayout>