<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--修改支付密码-->
    <include
        layout="@layout/activity_settings_title_pay"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/y31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x8"
            android:text="填写"
            android:textColor="@color/default_text_color"/>
        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*敏龙的身份证号"
            android:textSize="@dimen/x8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证身份"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/x8"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/et_card_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@null"
        android:text="请输入身份证号码"
        android:layout_marginTop="@dimen/y14"
        android:textSize="@dimen/y6"
        android:textColor="@color/default_text_color"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="@dimen/y128"
        android:layout_height="@dimen/x24"
        android:layout_marginTop="@dimen/x16"
        android:text="下一步"
        android:textSize="@dimen/x8"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@mipmap/button"
        android:layout_marginRight="@dimen/x21"
        android:layout_marginLeft="@dimen/x21"
        />


</LinearLayout>