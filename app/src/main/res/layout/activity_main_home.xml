<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andorid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:layout_above="@+id/radiogroup" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_60"
        android:background="#FEFEFE"
         android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_home"
            style="@style/radioButton"
            android:text="首页"
            android:checked="true"

            android:drawableTop="@drawable/selector_bottom_tab_first" />
        <RadioButton
            android:id="@+id/rb_e_find"
            style="@style/radioButton"
            android:text="E发现"
            android:drawableTop="@drawable/selector_bottom_tab_ediscover" />

        <RadioButton
            android:id="@+id/rb_e_latter"
            style="@style/radioButton"
            android:text="E信"
            android:drawableTop="@drawable/selector_bottom_tab_im" />
        <RadioButton
            android:id="@+id/rb_mail_list"
            style="@style/radioButton"
            android:text="通讯录"
            android:drawableTop="@drawable/selector_bottom_tab_frend" />
        <RadioButton
            android:id="@+id/rb_my"
            style="@style/radioButton"
            android:text="我的"
            android:drawableTop="@drawable/selector_bottom_tab_mine" />

    </RadioGroup>
</RelativeLayout>
