<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    >
    <include
        layout="@layout/activity_settings_title_login"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/x15">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请为域名liuming"
            android:textSize="@dimen/x9" />
        <ImageView
            android:layout_toRightOf="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x2"
            android:layout_marginTop="@dimen/x2"
            android:src="@mipmap/e_dlscover" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置一个新密码"
        android:textSize="@dimen/x8"
        android:layout_marginTop="@dimen/y7"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x15"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y21">

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_old_see"
            android:background="@null"
            android:hint="请输入旧密码"
            android:textSize="@dimen/x8"
            android:layout_marginLeft="@dimen/x11"
            />
        <ImageView
            android:id="@+id/iv_old_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/close_eyes"
            android:paddingTop="@dimen/x11"
            android:paddingRight="@dimen/x11"
            android:paddingBottom="@dimen/x9"
            android:paddingLeft="@dimen/x4"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y21">

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_new_see"
            android:background="@null"
            android:hint="请设置8-20位（不能全数字或字母）"
            android:textSize="@dimen/x8"
            android:layout_marginLeft="@dimen/x11"
            />
        <ImageView
            android:id="@+id/iv_new_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/close_eyes"
            android:paddingTop="@dimen/x11"
            android:paddingRight="@dimen/x11"
            android:paddingBottom="@dimen/x9"
            android:paddingLeft="@dimen/x4"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y21">

        <EditText
            android:id="@+id/et_again_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_again_see"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:textSize="@dimen/x8"
            android:layout_marginLeft="@dimen/x11"
            />
        <ImageView
            android:id="@+id/iv_again_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/close_eyes"
            android:paddingTop="@dimen/x11"
            android:paddingRight="@dimen/x11"
            android:paddingBottom="@dimen/x9"
            android:paddingLeft="@dimen/x4"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x11"
        android:paddingTop="@dimen/x11"
        android:paddingRight="@dimen/x11"
        android:text="忘记旧密码"
        android:textSize="@dimen/x9"
        android:textColor="@color/vertify_color"
        android:paddingBottom="@dimen/x9" />
    <RelativeLayout
        android:id="@+id/rl_save"
        android:layout_width="@dimen/x175"
        android:layout_height="@dimen/x23"
        android:background="@mipmap/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x9"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存新密码"
            android:textColor="@color/white"
            android:textSize="@dimen/x9"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>