<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/root_head_title_height"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/root_head_back"
                android:layout_width="@dimen/root_head_title_image_size"
                android:layout_height="@dimen/root_head_title_image_size"
                android:padding="@dimen/root_head_title_image_padding"
                android:src="@mipmap/iv_back" />

            <TextView
                android:id="@+id/root_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/root_head_title_text_size_18" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/index_bar_view_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/root_head_right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="标题"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/root_head_title_text_size_14"
                    android:visibility="gone" />


                <!--<ImageView-->
                    <!--android:id="@+id/root_head_right_icon"-->
                    <!--android:layout_width="36dp"-->
                    <!--android:layout_height="36dp"-->
                    <!--android:padding="@dimen/text_size_6"-->
                    <!--android:src="@mipmap/icon_dow"-->
                    <!--android:visibility="gone"-->

                    <!--/>-->
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b3b3b3" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colore6e6e6" />
</LinearLayout>