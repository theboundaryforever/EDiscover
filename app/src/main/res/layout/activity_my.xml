<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/default_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_160"
        android:background="@mipmap/im_my_bg">

        <ImageView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/bt_margini_20"
            android:src="@mipmap/set_up" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bt_margini_20"
            android:layout_centerHorizontal="true"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="@dimen/font17" />

<RelativeLayout
    android:id="@+id/rl_person_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/bt_margin_30">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_person_img"
        android:layout_width="@dimen/bt_margin_50"
        android:layout_height="@dimen/bt_margin_50"
        android:layout_marginLeft="@dimen/bt_margin_15"
        android:src="@mipmap/head_portrait" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_person_img"
        android:layout_marginLeft="@dimen/bt_margin_15"
        android:text="刘晓明"
        android:textColor="@color/white"
        android:textSize="@dimen/font15"
        android:layout_marginTop="@dimen/bt_margin_10"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:paddingBottom="@dimen/bt_margin_10"
        android:layout_below="@+id/tv_name">

        <TextView
            android:id="@+id/tv_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="域名：liumin "
            android:textColor="@color/white"
            android:textSize="@dimen/font14" />

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_domain"
            android:layout_alignTop="@+id/tv_domain"
            android:layout_toRightOf="@+id/tv_domain"
            android:paddingTop="@dimen/bt_margin_1"
            android:src="@mipmap/domain_name" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/white_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/bt_margin_15" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ewm"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/bt_margin_40" />

</RelativeLayout>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rl_authen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="#fef8ec">

                <ImageView
                    android:id="@+id/iv_vertify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:src="@mipmap/real_name_authentication" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="实名认证后，更多体验"
                    android:layout_toRightOf="@+id/iv_vertify"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font13"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:textColor="@color/vertify_color"
                    />
                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                   android:padding="@dimen/bt_margin_15"
                    android:src="@mipmap/cross"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_count"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_count"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:layout_centerVertical="true"
                     />
                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="账户明细"
                    android:layout_toRightOf="@+id/iv_count"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font15"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:padding="@dimen/bt_margin_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/set_go"
                   />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/tv_account"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_total_assets"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_total_assets"
                   android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    />
                <TextView
                    android:id="@+id/tv_total_assets"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="总资产"
                    android:layout_toRightOf="@+id/iv_total"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font15"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/set_go"
                    android:padding="@dimen/bt_margin_15" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/tv_total_assets"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_line"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15" />
                <TextView
                    android:id="@+id/tv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="线下订单记录"
                    android:layout_toRightOf="@+id/iv_line"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font15"
                    android:layout_marginLeft="@dimen/bt_margin_15" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/set_go"
                    android:padding="@dimen/bt_margin_15" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margini_20"/>
            <RelativeLayout
                android:id="@+id/rl_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_ed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_ed"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/tv_ed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ED币账户"
                    android:layout_toRightOf="@+id/iv_ed"
                    android:textSize="@dimen/font15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15" />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/set_go"
                    android:padding="@dimen/bt_margin_15" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:background="@color/line_color"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/tv_ed"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_wallet"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15" />
                <TextView
                    android:id="@+id/tv_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="余额"
                    android:layout_toRightOf="@+id/iv_wallet"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font15"
                   android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margin_15" />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/set_go"
                    android:padding="@dimen/bt_margin_15" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margini_20"/>
            <RelativeLayout
                android:id="@+id/rl_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/iv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/im_ed"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bt_margini_20" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的银行卡"
                    android:layout_toRightOf="@+id/iv_card"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:textSize="@dimen/font15"
                   android:layout_centerVertical="true"
                    />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/set_go"
                    android:padding="@dimen/bt_margin_15" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>