<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    >
   <include
       layout="@layout/activity_settings_title_person"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_15" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margin_50"
        android:background="@color/white">
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="刘晓明"
            android:textSize="@dimen/font15"
           android:padding="@dimen/bt_margin_15"
            android:layout_centerVertical="true"
            android:background="@null"
            />
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cancel"
            android:layout_alignParentRight="true"
           android:padding="@dimen/bt_margin_15"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="字数（限制二十个字以内）"
        android:layout_marginTop="@dimen/bt_margin_10"
        android:layout_marginLeft="@dimen/bt_margin_15"
        android:textSize="@dimen/font14"
        />
    <LinearLayout
        android:id="@+id/ll_default"
        android:layout_width="@dimen/bt_margin_295"
        android:layout_height="@dimen/bt_margin_40"
        android:background="@mipmap/bt_bg1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bt_margin_30"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="确认修改"
            android:textSize="@dimen/font15"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_ok"
        android:layout_width="@dimen/bt_margin_295"
        android:layout_height="@dimen/bt_margin_40"
        android:background="@mipmap/bt_bg2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bt_margin_30">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="确认修改"
            android:textSize="@dimen/font15"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>