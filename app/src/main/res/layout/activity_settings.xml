<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y27"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set_back"
            android:paddingLeft="@dimen/x9"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/x9"
            android:paddingRight="@dimen/x10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="@dimen/x10"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x10"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"/>
    <RelativeLayout
        android:id="@+id/rl_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:layout_marginBottom="@dimen/x11"
            android:textSize="@dimen/x9"
            android:text="手机号"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678901"
            android:layout_marginTop="@dimen/x11"
            android:paddingRight="@dimen/x9"
            android:textSize="@dimen/x9"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/set_go"
            android:drawablePadding="@dimen/x9"
            />
        <view
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x9"
            android:layout_below="@+id/tv_tel" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:layout_marginBottom="@dimen/x11"
            android:textSize="@dimen/x9"
            android:text="密码设置"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/x11"
            android:paddingRight="@dimen/x9"

            android:layout_alignParentRight="true"
            android:src="@mipmap/set_go"
            />
        <view
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x9"
            android:layout_below="@+id/tv_pwd" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:layout_marginBottom="@dimen/x11"
            android:textSize="@dimen/x9"
            android:text="新消息通知" />
        <ImageView
            android:layout_width="@dimen/y23"
            android:layout_height="@dimen/x21"
            android:paddingRight="@dimen/x9"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x5"
            android:src="@mipmap/close"/>
        <view
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x9"
            android:layout_below="@+id/tv_notice" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:layout_marginBottom="@dimen/x11"
            android:textSize="@dimen/x9"
            android:text="举报中心"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/x11"
            android:paddingRight="@dimen/x9"

            android:layout_alignParentRight="true"
            android:src="@mipmap/set_go"
            />
        <view
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x9"
            android:layout_below="@+id/tv_report" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:layout_marginBottom="@dimen/x11"
            android:textSize="@dimen/x9"
            android:text="联系客服"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/x11"
            android:paddingRight="@dimen/x9"

            android:layout_alignParentRight="true"
            android:src="@mipmap/set_go"
            />
        <view
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/x9"
            android:layout_below="@+id/tv_contract" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x23"
        android:background="@mipmap/bt_bg2"
        android:layout_marginTop="@dimen/x18"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="@dimen/x9"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>