<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    >
    <include
        layout="@layout/activity_settings_title_login"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请等待接收短信验证码"
            android:layout_marginTop="@dimen/x15"
            android:layout_centerInParent="true"
            android:textSize="@dimen/x9"
            android:layout_marginBottom="@dimen/y11"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <EditText
            android:id="@+id/et_vertify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入验证码"
            android:layout_marginTop="@dimen/x10"
            android:layout_centerInParent="true"
            android:textSize="@dimen/x9"
            android:layout_marginBottom="@dimen/x11"
            android:background="@null" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y16"
        android:background="@mipmap/bt_bg1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x19"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="下一步"
            android:textSize="@dimen/x9"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y16"
        android:background="@mipmap/bt_bg2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x19"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="下一步"
            android:textSize="@dimen/x8"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>