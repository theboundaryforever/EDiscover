<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y27"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set_back"
            android:paddingLeft="@dimen/x9"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/x10"
            android:paddingRight="@dimen/x10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="@dimen/y7"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x9"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6" />
    <RelativeLayout
        android:id="@+id/rl_pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y27"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:text="重置支付密码"
            android:layout_marginTop="@dimen/y10"
            android:textSize="@dimen/x9"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set_go"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x9"
            android:layout_marginTop="@dimen/x16"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y27"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:text="重置登录密码"
            android:layout_marginTop="@dimen/y10"
            android:textSize="@dimen/x9"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/set_go"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x9"
            android:layout_marginTop="@dimen/x16"
            />

    </RelativeLayout>
</LinearLayout>