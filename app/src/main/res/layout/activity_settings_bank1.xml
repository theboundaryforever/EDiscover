<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical">

    <include layout="@layout/activity_settings_title_bank" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="通过银行卡信息验证身份"
                    android:textSize="@dimen/font15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_25" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_bank_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:gravity="center_vertical"
                    android:text="银行卡号"
                    android:textSize="@dimen/font15" />

                <EditText
                    android:id="@+id/et_bank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_bank_num"

                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入银行卡号"
                    android:paddingRight="@dimen/bt_margin_15"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/font14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:gravity="center_vertical"
                    android:text="所选银行"
                    android:textSize="@dimen/font15" />

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_bank"
                    android:background="@null"

                    android:gravity="center_vertical|right"
                    android:hint="工商银行"
                    android:paddingRight="@dimen/bt_margin_15"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/font15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_43"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:layout_marginTop="@dimen/bt_margin_8"
                    android:src="@mipmap/warn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/bt_margin_10"
                    android:layout_marginTop="@dimen/bt_margin_8"
                    android:gravity="top"
                    android:text="以上内容仅用于身份认证，将严格保密"
                    android:textSize="@dimen/font11" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textSize="@dimen/font15" />

                <EditText
                    android:id="@+id/et_tel_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_tel"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入银行卡预留手机号"
                    android:paddingRight="@dimen/bt_margin_15"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/font15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/bt_margin_125"
                android:layout_height="@dimen/bt_margin_30"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/bt_margin_15"
                android:background="@mipmap/bt_bg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_margin_50"
                android:layout_marginTop="@dimen/bt_margin_15"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/bt_margin_15"
                    android:gravity="center_vertical"
                    android:text="验证码"

                    android:textSize="@dimen/font15" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_code"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入收到的验证码"
                    android:paddingBottom="@dimen/bt_margin_15"
                    android:paddingRight="@dimen/bt_margin_15"
                    android:paddingTop="@dimen/bt_margin_15"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/font14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bt_margin_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_ok"
                android:layout_width="@dimen/bt_margin_295"
                android:layout_height="@dimen/bt_margin_40"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/bt_margin_30"
                android:background="@mipmap/bt_bg2"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确认绑定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font15" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>