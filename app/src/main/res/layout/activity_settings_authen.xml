<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/activity_settings_title_authen"
        />
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/x6"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:textSize="@dimen/x9"
            android:paddingBottom="@dimen/x9"
            />
        <EditText
            android:id="@+id/et_real_name"
            android:layout_toRightOf="@+id/tv_real"
            android:paddingTop="@dimen/x11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:layout_marginRight="@dimen/x9"
            android:textSize="@dimen/x9"
            android:paddingBottom="@dimen/x9"
            android:hint="请输入真实姓名"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号码"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:textSize="@dimen/x9"
            android:paddingBottom="@dimen/x9"
            />
        <EditText
            android:id="@+id/et_card"
            android:layout_toRightOf="@+id/tv_card"
            android:paddingTop="@dimen/x11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:layout_marginRight="@dimen/x9"
            android:textSize="@dimen/x9"
            android:paddingBottom="@dimen/x9"
            android:hint="请输入身份证号码"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:textSize="@dimen/x9"
            android:paddingBottom="@dimen/x9"
            />
        <EditText
            android:id="@+id/et_tel"
            android:layout_toRightOf="@+id/tv_tel"
            android:paddingTop="@dimen/x11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:layout_marginRight="@dimen/x9"
            android:textSize="@dimen/x9"
            android:paddingBottom="@dimen/x9"
            android:hint="请输入手机号码"
            android:layout_marginTop="@dimen/x9"
            android:layout_marginBottom="@dimen/x9"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_scode"
        android:layout_width="@dimen/x59"
        android:layout_height="@dimen/x18"
        android:background="@mipmap/button"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/x8"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/x11"
            android:textSize="@dimen/x9"
            android:paddingBottom="@dimen/x9"
            />
        <EditText
            android:id="@+id/et_code"
            android:layout_toRightOf="@+id/tv_code"
            android:paddingTop="@dimen/x11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:layout_marginRight="@dimen/x9"
            android:textSize="@dimen/x9"
            android:paddingBottom="@dimen/x9"
            android:hint="请输入收到的验证码"
            android:layout_marginTop="@dimen/x9"
            android:layout_marginBottom="@dimen/x9" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传证件照"
        android:textSize="@dimen/x9"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginTop="@dimen/x11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x9"
        android:orientation="horizontal"
        >

            <ImageView
                android:id="@+id/iv_card_positive"
                android:layout_width="0dp"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"

               android:layout_marginLeft="@dimen/y19"
                android:layout_marginRight="@dimen/y9"
                android:src="@mipmap/idcard" />




        <ImageView
            android:id="@+id/iv_card_negative"
            android:layout_width="0dp"
            android:layout_height="@dimen/y50"
          android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/y9"
            android:layout_marginRight="@dimen/y19"

            android:src="@mipmap/idcard2" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x24"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y16"
        android:background="@mipmap/button"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确定"
            android:textSize="@dimen/x9"
            android:textColor="@color/white"
            />

    </RelativeLayout>
</LinearLayout>